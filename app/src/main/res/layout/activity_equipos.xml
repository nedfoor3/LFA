<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include layout="@layout/layout_toolbar"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="6dp"
        android:layout_below="@+id/toolbar">
        <ImageButton
            android:id="@+id/header_condors"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/head_condors"
            android:layout_marginBottom="6dp"/>
        <ImageButton
            android:id="@+id/header_dinos"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/head_dinos"
            android:layout_marginBottom="6dp"/>
        <ImageButton
            android:id="@+id/header_eagles"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/head_eagles"
            android:layout_marginBottom="6dp"/>
        <ImageButton
            android:id="@+id/header_fundidores"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/head_fundidores"
            android:layout_marginBottom="6dp"/>
        <ImageButton
            android:id="@+id/header_mayas"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/head_mayas"
            android:layout_marginBottom="6dp"/>
        <ImageButton
            android:id="@+id/header_raptors"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/head_raptors"/>
    </LinearLayout>
</RelativeLayout>