<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    tools:context="mx.lfa.com.rawrstudio.views.Equipos">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/toolbar">
    <include layout="@layout/layout_toolbar"/>
        <ImageButton
            android:id="@+id/header_condors"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/head_condors"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"/>
        <ImageButton
            android:id="@+id/header_dinos"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/head_dinos"
            android:layout_marginBottom="6dp"/>
        <ImageButton
            android:id="@+id/header_eagles"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/head_eagles"
            android:layout_marginBottom="6dp"/>
        <ImageButton
            android:id="@+id/header_fundidores"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/head_fundidores"
            android:layout_marginBottom="6dp"/>
        <ImageButton
            android:id="@+id/header_mayas"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/head_mayas"
            android:layout_marginBottom="6dp"/>
        <ImageButton
            android:id="@+id/header_raptors"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/head_raptors"/>
    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/lateral_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:clickable="true"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/layout_header_menu"
        app:menu="@menu/menu_nav" />

</android.support.v4.widget.DrawerLayout>