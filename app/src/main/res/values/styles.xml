<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#06753c</item>
        <item name="colorPrimaryDark">#1b5e20</item>
        <item name="colorAccent">#a21e22</item>

        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash_screen</item>
    </style>

    <style name="MyTabThemeStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">18dp</item>
    </style>

</resources>
